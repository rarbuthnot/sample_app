=provide(:title, @user.name)
%div.row
  %aside.span4
    %section
      %h1
        = gravatar_for @user
        = @user.name
  .span8
    - if @user.microposts.any?
      %h3 
        = surround "Microposts (", ")" do
          = @user.microposts.count
      %ol.microposts
        = render @microposts
      = will_paginate @microposts